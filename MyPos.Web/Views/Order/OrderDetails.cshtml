@model MyPos.DAL.Entity.Order

@{
    ViewBag.Title = "OrderDetails";
}

<h2>OrderDetails</h2>

<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShippingAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShippingAddress)
        </dd>

    </dl>
</div>
@*//table start*@
<table id="OrderDetailsView" class="table ">
    <thead>
        <tr>
            <th style="width:20%">Product</th>
            <th style="width:30%">Product Description</th>
            <th style="width:10%">Price</th>
            <th style="width:8%">Quantity</th>
            <th style="width:22%" class="text-center">Subtotal</th>
            <th style="width:10%"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var i in Model.OrderItems)
        {
        <tr>
            <td data-th="Product">@i.Product.ProductName</td>
            <td data-th="Description">@i.Product.ProductDescription</td>
            <td data-th="Price">@i.Product.CurrentPrice</td>
            <td data-th="Quantity">@i.Quantity</td>
            <td data-th="Subtotal" class="text-center">@(i.Product.CurrentPrice*i.Quantity)</td>
            
        </tr>
        }
    </tbody>
    <tfoot>
       
    </tfoot>
</table>

